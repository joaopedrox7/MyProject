# Lista de tarefas
tarefas = []

# Cadastro das 5 tarefas iniciais
print("=== Cadastro da Lista de Afazeres ===")
for i in range(5):
    tarefa = input(f"Digite a descrição da tarefa {i+1}: ").strip()
    tarefas.append(tarefa)

# Exibe a lista inicial
print("\nLista de tarefas atual:")
for i, tarefa in enumerate(tarefas, start=1):
    print(f"{i}. {tarefa}")

# Verifica se a primeira tarefa foi executada
resposta = input("\nA primeira tarefa foi executada? (s/n): ").strip().lower()

if resposta == 's':
    tarefa_removida = tarefas.pop(0)
    print(f"\nTarefa '{tarefa_removida}' removida da lista.")

    # Oferece opção de adicionar nova tarefa
    nova = input("Deseja adicionar uma nova tarefa? (s/n): ").strip().lower()
    if nova == 's':
        nova_tarefa = input("Digite a descrição da nova tarefa: ").strip()
        tarefas.append(nova_tarefa)

# Exibe a lista final
print("\n=== Lista Final de Tarefas ===")
for i, tarefa in enumerate(tarefas, start=1):
    print(f"{i}. {tarefa}")